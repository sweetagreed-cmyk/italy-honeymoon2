│   ├── components/        # 通用 UI 組件 (Button, Card, Input)
│   │   ├── layout/        # BottomNav, Header, ProtectedRoute
│   │   └── shared/        # 跨頁面共用組件
│   ├── config/            # 設定檔
│   │   └── firebase.ts
│   ├── features/          # 核心功能模組
│   │   ├── schedule/      # 行程相關
│   │   ├── bookings/      # 預訂、機票、PIN 鎖
│   │   ├── expense/       # 記帳、匯率
│   │   ├── journal/       # 日誌、相片
│   │   └── planning/      # 清單、任務
